<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShortVideo - Platform Video Pendek</title>
    
    <!-- CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/">
                    <i class="fas fa-play-circle"></i>
                    <span>ShortVideo</span>
                </a>
            </div>
            
            <div class="nav-search">
                <form action="/search" method="GET" class="search-form">
                    <div class="search-input-container">
                        <input 
                            type="text" 
                            name="q" 
                            placeholder="Cari video..." 
                            class="search-input"
                        >
                        <button type="submit" class="search-btn">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
            
            <div class="nav-menu">
                <a href="/" class="nav-link active">
                    <i class="fas fa-home"></i>
                    <span>Beranda</span>
                </a>
                <a href="#trending" class="nav-link">
                    <i class="fas fa-fire"></i>
                    <span>Trending</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <h1>Temukan Video Pendek Terbaik</h1>
                <p>Jelajahi koleksi video pendek yang menghibur, mendidik, dan menginspirasi</p>
            </div>
        </section>

        <!-- Trending Section -->
        <% if (trendingVideos && trendingVideos.length > 0) { %>
        <section class="trending-section" id="trending">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-fire"></i>
                    Video Trending
                </h2>
                <div class="trending-grid">
                    <% trendingVideos.forEach(video => { %>
                    <div class="trending-card">
                        <a href="/video/<%= video.id %>" class="trending-link">
                            <div class="trending-thumbnail">
                                <img src="<%= video.thumbnail || '/images/default-thumbnail.jpg' %>" 
                                     alt="<%= video.title %>" 
                                     loading="lazy">
                                <div class="play-overlay">
                                    <i class="fas fa-play"></i>
                                </div>
                                <div class="duration-badge">
                                    <%= Math.floor(video.duration / 60) %>:<%= (video.duration % 60).toString().padStart(2, '0') %>
                                </div>
                            </div>
                            <div class="trending-info">
                                <h3><%= video.title %></h3>
                                <div class="video-stats">
                                    <span><i class="fas fa-eye"></i> <%= video.views.toLocaleString() %></span>
                                    <span><i class="fas fa-heart"></i> <%= video.likes %></span>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }) %>
                </div>
            </div>
        </section>
        <% } %>

        <!-- All Videos Section -->
        <section class="videos-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-video"></i>
                    Semua Video
                </h2>
                
                <div class="videos-grid" id="videosGrid">
                    <% if (videos && videos.length > 0) { %>
                        <% videos.forEach(video => { %>
                        <div class="video-card">
                            <a href="/video/<%= video.id %>" class="video-link">
                                <div class="video-thumbnail">
                                    <img src="<%= video.thumbnail || '/images/default-thumbnail.jpg' %>" 
                                         alt="<%= video.title %>" 
                                         loading="lazy">
                                    <div class="play-overlay">
                                        <i class="fas fa-play"></i>
                                    </div>
                                    <div class="duration-badge">
                                        <%= Math.floor(video.duration / 60) %>:<%= (video.duration % 60).toString().padStart(2, '0') %>
                                    </div>
                                </div>
                                <div class="video-info">
                                    <h3 class="video-title"><%= video.title %></h3>
                                    <p class="video-description"><%= video.description ? video.description.substring(0, 100) + '...' : '' %></p>
                                    <div class="video-stats">
                                        <span><i class="fas fa-eye"></i> <%= video.views.toLocaleString() %></span>
                                        <span><i class="fas fa-heart"></i> <%= video.likes %></span>
                                        <span><i class="fas fa-clock"></i> <%= new Date(video.created_at).toLocaleDateString('id-ID') %></span>
                                    </div>
                                    <% if (video.tags) { %>
                                    <div class="video-tags">
                                        <% video.tags.split(',').slice(0, 3).forEach(tag => { %>
                                        <span class="tag">#<%= tag.trim() %></span>
                                        <% }) %>
                                    </div>
                                    <% } %>
                                </div>
                            </a>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <div class="no-videos">
                            <i class="fas fa-video-slash"></i>
                            <h3>Belum ada video</h3>
                            <p>Belum ada video yang tersedia saat ini.</p>
                        </div>
                    <% } %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (hasPrevPage) { %>
                        <a href="?page=<%= currentPage - 1 %>" class="page-btn">
                            <i class="fas fa-chevron-left"></i>
                            Sebelumnya
                        </a>
                    <% } %>
                    
                    <div class="page-numbers">
                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                            <a href="?page=<%= i %>" class="page-number <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } %>
                    </div>
                    
                    <% if (hasNextPage) { %>
                        <a href="?page=<%= currentPage + 1 %>" class="page-btn">
                            Selanjutnya
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
                <% } %>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>ShortVideo</h3>
                <p>Platform terbaik untuk menonton video pendek yang menghibur</p>
            </div>
            <div class="footer-section">
                <h4>Navigasi</h4>
                <ul>
                    <li><a href="/">Beranda</a></li>
                    <li><a href="#trending">Trending</a></li>
                    <li><a href="/">Kategori</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Kontak</h4>
                <p>Email: info@shortvideo.com</p>
                <p>Telepon: +62 123 456 789</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 ShortVideo. Semua hak dilindungi.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/js/main.js"></script>
</body>
</html>